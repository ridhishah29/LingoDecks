<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_quickdraw_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group22.myapplication.QuickdrawResults">

    <TextView
        android:id="@+id/quickdraw_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/quickdraw_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/quickdraw_mode"
        android:textColor="@android:color/black"
        android:textSize="50dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreMessage"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="60dp"
        android:text="You got"
        android:layout_marginTop="90dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/correctScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="60dp"
        android:layout_marginTop="170dp"
        android:text="0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreDivider"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="60dp"
        android:layout_marginTop="200dp"
        android:text="___________"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="60dp"
        android:layout_marginTop="270dp"
        android:text="0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/percentageScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="60dp"
        android:layout_marginTop="360dp"
        android:text="0%"/>



</RelativeLayout>
