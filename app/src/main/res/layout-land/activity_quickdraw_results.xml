<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quickdraw_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group22.myapplication.QuickdrawResults">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreMessage"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="50dp"
        android:layout_marginTop="5dp"
        android:text="You got"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/correctScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="50dp"
        android:layout_marginTop="70dp"
        android:text="0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreDivider"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="40dp"
        android:layout_marginTop="95dp"
        android:text="___________"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="50dp"
        android:layout_marginTop="140dp"
        android:text="0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/percentageScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="50dp"
        android:layout_marginTop="205dp"
        android:text="0 %"/>


</RelativeLayout>
