<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_quickdraw_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group22.myapplication.QuickdrawResults">

    <TextView
        android:id="@+id/quickdraw_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/quickdraw_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/quickdraw_mode"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreMessage"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="50dp"
        android:layout_marginTop="100dp"
        android:text="You got"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/correctScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="50dp"
        android:layout_marginTop="180dp"
        android:text="0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreDivider"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="40dp"
        android:layout_marginTop="205dp"
        android:text="___________"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="50dp"
        android:layout_marginTop="250dp"
        android:text="0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/percentageScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="50dp"
        android:layout_marginTop="350dp"
        android:text="0%"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="450dp"
        android:background="#ffeba8"
        android:onClick="shareBtn"
        android:padding="10dp"/>


</RelativeLayout>
